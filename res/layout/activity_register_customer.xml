<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutRegisterCustomer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <TextView
        android:id="@+id/usernameLabelRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernameInputRegisterCustomerActivity"
        android:layout_alignBottom="@+id/usernameInputRegisterCustomerActivity"
        android:layout_alignParentLeft="true"
        android:text="@string/username" />

    <EditText
        android:id="@+id/usernameInputRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/usernameLabelRegisterCustomerActivity"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/mobileLabelRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernameLabelRegisterCustomerActivity"
        android:layout_below="@+id/usernameLabelRegisterCustomerActivity"
        android:layout_marginTop="14dp"
        android:text="@string/mobile" />

    <EditText
        android:id="@+id/mobileInputRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/usernameInputRegisterCustomerActivity"
        android:layout_below="@+id/usernameInputRegisterCustomerActivity"
        android:layout_toRightOf="@+id/mobileLabelRegisterCustomerActivity"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/passwordLabelRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobileLabelRegisterCustomerActivity"
        android:layout_below="@+id/mobileLabelRegisterCustomerActivity"
        android:layout_marginTop="14dp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/passwordInputRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/passwordLabelRegisterCustomerActivity"
        android:layout_alignRight="@+id/mobileInputRegisterCustomerActivity"
        android:layout_below="@+id/mobileInputRegisterCustomerActivity"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/confirmLabelRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordLabelRegisterCustomerActivity"
        android:layout_below="@+id/passwordLabelRegisterCustomerActivity"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_password" />

    <EditText
        android:id="@+id/confirmInputRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/confirmLabelRegisterCustomerActivity"
        android:layout_alignRight="@+id/passwordInputRegisterCustomerActivity"
        android:layout_below="@+id/passwordInputRegisterCustomerActivity"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerCustomerButtonRegisterCustomerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/confirmInputRegisterCustomerActivity"
        android:layout_below="@+id/confirmInputRegisterCustomerActivity"
        android:layout_marginTop="16dp"
        android:text="@string/register" />

</RelativeLayout>